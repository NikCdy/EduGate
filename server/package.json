{
  "name": "edugate-mongodb-api",
  "version": "1.0.0",
  "description": "MongoDB API for EduGate",
  "main": "mongodb-api.js",
  "scripts": {
    "start": "node server.js",
    "start:clean": "start-clean.bat",
    "setup": "node setup-mongodb.js",
    "test": "node test-connection.js",
    "dev": "nodemon server.js",
    "search": "node mongodb-api.js",
    "migrate": "node migrate-mysql-to-mongodb.js",
    "migrate-xampp": "node migrate-xampp-to-mongodb.js",
    "init-search": "node -e \"require('./services/searchService').initializeIndices()\"",
    "test-ai": "node test-ai.js",
    "test-search": "node test-search-apis.js",
    "ai-status": "node -e \"require('./services/aiService').initialize().then(() => console.log(require('./services/aiService').getStatus()))\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "mongodb": "^5.7.0",
    "mongoose": "^8.16.4",
    "multer": "^2.0.2",
    "mysql2": "^3.6.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
